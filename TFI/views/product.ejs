
	<!-- Include Head -->
	<%- include("./partials/head") %>
	<!-- Header -->
 
	<%- include("./partials/header") %>
	<!-- /Header -->

	<!-- product detail -->
	<% for( let i = 0; i < productos.length; i++ ) { %>
		<% if (productos[i].id == id) { %>
			<div class="container products-wrapper">
				<div class="d-flex align-items-center">
					<h2 class="products-title"><%= productos[i].nombreProducto %></h2> 
					<p class="product-detail-description">
						<a href="/product/product-add">Editar</a>
					</p>
				</div>
				<div class="product-detail">
					<div class="row">
						<article class="col-12 col-lg-8 product-detail-info">
							<img src="/<%= productos[i].imagen %>" alt="" class="product-detail-img">
							<p class="product-detail-description"><%= productos[i].descripcion %></p>
						</article>
						<div class="col-12 col-lg-4">
							<% for( let i = 0; i < comentarios.length; i++ ) { %>
								<section class="comments">
									<article>
										<img src="<%= comentarios[i].fotoPerfil %>" alt="">
										<div class="data">
											<p class="user">
											<strong> <a href="profile"><%= comentarios[i].nombreUsuario %></a> </strong><%= comentarios[i].texto %>
											</p>
										</div>
									</article>
								</section>
							
							<% } %>
							<form class="form" action="" method="POST">
								<input class="form-input" type="text" value="" placeholder="Agregar comentario">
								<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
							</form>
							<hr>
						</div>
					</div>
				</div>
			</div>
			
		 
		<% } %>
	
	<% } %>
	
	<!-- /product detail -->

	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->