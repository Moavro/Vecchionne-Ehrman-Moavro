<!-- Header -->
	<header class="main-header">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-5 col-md-2">
					<a href="/index" class="main-header_home-link">
						<img src="/images/logocuazzi.png">
					</a>
				</div>
	
				<div class="col-7 col-md-6">
					<form action="/index/search-result" method="GET" class="search-form">
						<input type="text" name="search" placeholder="Buscar botines de primera marca" class="search-form_input">
						<button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
					</form>
				</div>
	
				<div class="col-12 col-md-4">
					<a class="main-header_credit-link">
						<i class="fas fa-hand-holding-usd"></i>
						Los mejores botines del mercado.
					</a>
				</div>
			</div>
	
			<button class="btn-toggle-navbar">
				<i class="fas fa-bars"></i>
			</button>
	
			<nav class="main-navbar">
				<ul class="left-navbar">
					<li><a href="/">Todos los productos</a></li>
					<li><a href="/product/product-add">Cargar productos</a></li>
				</ul>
	
				<ul class="right-navbar">
					<li><a href="/profile">
						<%= locals.user.usuario %> <i class="fas fa-user"></i>
						</a>
					</li>
					<li>
						<form action="/profile/login" method="get">
							<button class="logout" type="submit">
								Cerrar sesión <i class="fas fa-sign-in-alt"></i>
							</button>
						</form>
					</li>
					<!-- Solo deslogueado <li>
						<a href="register.html">Creá tu cuenta <i class="far fa-address-card"></i>
						</a>
					</li>
					<li>
						<a href="login.html">Ingresá <i class="fas fa-sign-in-alt"></i></a>
					</li> -->
				</ul>
			</nav>
		</div>
		<% if (locals.user != null) { %>
			<strong>Bienvenido <%= locals.user.usuario %> :) </strong> 
		<% } %>
	</header>
	<!-- /Header -->
	
