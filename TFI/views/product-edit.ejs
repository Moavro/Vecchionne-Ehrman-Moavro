<!-- Include Head -->
<%- include("./partials/head") %>
	<!-- Header -->

	<%- include("./partials/headerLogueado") %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar Producto</h2>
			</div>
			<!-- Show the "ultimos" products -->
            <h2 class="col-12"> 
				<form action="/product/edit/<%= productos.id %>" method="post">
					<div>
						<input type="text" name="foto_producto" value="<%=  productos.foto_producto %>" placeholder="Imagen" required>
					</div>
					<div>
						<input type="text" name="nombre" value="<%= productos.nombre  %>" placeholder="Nombre de producto" required>
					</div>
					<div>
						<input type="text" name="descripcion" value="<%= productos.descripcion  %>" placeholder="Descripcion" required>
					</div>
					<div>
						<input type="date" name="fecha_carga" value="<%= productos.fecha_carga  %>" placeholder="Fecha de carga" required>
					</div>
					<button type="submit">Enviar</button>				
				</form>
			</h2>

	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->
